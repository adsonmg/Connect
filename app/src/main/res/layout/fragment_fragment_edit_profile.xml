<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                style="@style/subtitulo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Informações básicas" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_user" />

            <EditText
                android:id="@+id/etNome"
                style="@style/input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Nome (campo obrigatório)"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etBio"
                style="@style/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="Fale sobre você.."
                android:lines="6"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Email (campo obrigatório)"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etTelefone"
                style="@style/input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="Telefone (Campo obrigatório)"
                android:inputType="phone" />

            <View
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp" />

            <TextView
                style="@style/subtitulo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Redes Sociais" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <EditText
                    android:id="@+id/etFacebook"
                    style="@style/input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:hint="facebook.com/username"
                    android:textAlignment="center" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <EditText
                    android:id="@+id/etInstagram"
                    style="@style/input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:hint="instagram.com/username"
                    android:textAlignment="center" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <EditText
                    android:id="@+id/etSnapchat"
                    style="@style/input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:hint="Seu Snapchat"
                    android:textAlignment="center" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <EditText
                    android:id="@+id/etTwitter"
                    style="@style/input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:hint="twitter.com/username"
                    android:textAlignment="center" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <EditText
                    android:id="@+id/etWhatsApp"
                    style="@style/input"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:hint="Seu WhatsApp"
                    android:textAlignment="center" />
            </GridLayout>


        </LinearLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSalvarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@mipmap/ic_done" />
</android.support.design.widget.CoordinatorLayout>