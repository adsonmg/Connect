<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingTop="16dp">




            <com.mikhaellopez.circularimageview.CircularImageView

        android:id="@+id/imgProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_user" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:layout_gravity="center"
            android:id="@+id/tvNome"
            android:layout_weight="1"
            style="@style/redesociais"
            android:textSize="36sp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fale sobre vocÃª.."
            android:layout_gravity="center"
            android:id="@+id/tvBio"
            android:layout_weight="1"
            android:lines="6"
            style="@style/redesociais"
            android:gravity="top"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="email"
            android:layout_gravity="center"
            android:id="@+id/tvEmail"
            android:layout_weight="1"
            style="@style/redesociais"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Telefone"
            android:layout_gravity="center"
            android:id="@+id/tvTelefone"
            android:layout_weight="1"
            style="@style/redesociais"
            android:autoLink="phone"
            android:textAlignment="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/divider"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                style="@style/subtitulo"
                android:text="Redes Sociais"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/glFacebook"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <TextView
                    android:id="@+id/tvFacebook"
                    style="@style/redesociais"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:hint="Facebook"
                    android:text="facebook"
                    android:autoLink="web"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/glInstagram"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <TextView
                    android:id="@+id/tvInstagram"
                    style="@style/redesociais"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:hint="Instagram"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/glSnapchat"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <TextView
                    android:id="@+id/tvSnapchat"
                    style="@style/redesociais"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:hint="Snapchat"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/glTwitter"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_user" />

                <TextView
                    android:id="@+id/tvTwitter"
                    style="@style/redesociais"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:hint="Twitter"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/glWhatsApp"
                >

                <TextView
                    android:id="@+id/tvWhatsApp"
                    style="@style/redesociais"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:gravity="center_vertical"
                    android:hint="WhatsApp"
                    />
            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>